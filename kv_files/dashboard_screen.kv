<DashboardScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Gr√°fico"
            left_action_items: [["menu", lambda _: root.open_nav_drawer()]]

        MDScrollView:
            MDBoxLayout:
                id: graph_container
                orientation: "vertical"
                padding: "10dp"
                spacing: "10dp"
                height: self.minimum_height

    # Mova o MDNavigationDrawer para fora do MDBoxLayout principal
    MDNavigationDrawer:
        id: nav_drawer
        size_hint: None, 1
        width: "240dp"

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(8)
            spacing: dp(8)
            adaptive_height: True  # Ajusta automaticamente a altura
            pos_hint: {"top": 1}  # Ancora no topo

            MDList:
                id: left_navbar
                size_hint_y: None
                height: self.minimum_height
                padding: dp(8)
                spacing: dp(8)