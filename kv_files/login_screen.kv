<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(50)
        spacing: dp(20)
        size_hint: 0.8, None
        height: self.minimum_height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            text: "Login"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDTextField:
            id: username
            text: "admin"
            hint_text: "Usu√°rio"
            icon_left: "account"
            size_hint_x: 1
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            text: "123"
            hint_text: "Senha"
            icon_left: "lock"
            password: True
            size_hint_x: 1
            pos_hint: {"center_x": 0.5}
        
        MDRaisedButton:
            text: "Acessar"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: root.auth()

        MDRaisedButton:
            text: "Cadastrar"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: 
                root.manager.current = "Signup"
                root.manager.transition.direction = "left"
